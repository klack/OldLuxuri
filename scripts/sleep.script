///////////////////////////////////////////////////////////////////////////////
/// @fn luxSleep 1
/// @brief Simulate sleep by using a top layer
///////////////////////////////////////////////////////////////////////////////
thsp=0
if(tmSleep.en==0)
{
  tmSleep.en=1
}
if(FakeSleep==1)
{
  dim=50
  setlayer oSleep,255
  oSleep.x=0
}

///////////////////////////////////////////////////////////////////////////////
/// @fn luxSleep 0
/// @breif Reset sleep settings
///////////////////////////////////////////////////////////////////////////////
oSleep.x=-480
tmSleep.en=0
FakeSleep=0
InactiveMins=0
thsp=SLEEP_TIME
dim=100

///////////////////////////////////////////////////////////////////////////////
/// tmSleep 60000ms timer
///////////////////////////////////////////////////////////////////////////////
InactiveMins+=1
if(InactiveMins>=FakeSleep)
{
  FakeSleep=1
}

///////////////////////////////////////////////////////////////////////////////
/// oSleep click
///////////////////////////////////////////////////////////////////////////////
click luxSleep,0

///////////////////////////////////////////////////////////////////////////////
/// @fn Page Exit
/// @breif Required to re-enable real sleep mode
///////////////////////////////////////////////////////////////////////////////
click luxSleep,0