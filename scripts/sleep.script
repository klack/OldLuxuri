///////////////////////////////////////////////////////////////////////////////
/// @fn luxSleep 1
/// @brief Simulate sleep by using a top layer
///////////////////////////////////////////////////////////////////////////////
if(printer.printState.txt!="printing")
{
  thsp=0
  if(FakeSleep==1)
  {
    dim=0
    setlayer oSleep,255
    oSleep.x=0
    thsp=0
  }else
  {
    dim=100
    oSleep.x=-480
  } 
}

///////////////////////////////////////////////////////////////////////////////
/// @fn luxSleep 0
/// @breif Reset sleep settings
oSleep.x=-480
FakeSleep=0
InactiveMins=0
thsp=SLEEP_TIME*60
dim=100

///////////////////////////////////////////////////////////////////////////////
/// tmSleep 60000ms timer
///////////////////////////////////////////////////////////////////////////////
InactiveMins+=1
if(InactiveMins>=FakeSleep)
{
  FakeSleep=1
}

/// oSleep click
InactiveMins=0
FakeSleep=0