///////////////////////////////////////////////////////////////////////////////
/// @fn controller,1
///
/// @brief Program loop
/// @brief state.txts: null, ready
///////////////////////////////////////////////////////////////////////////////
if(printer.printState.txt=="null")
{
  commands.command.txt="M220\rM221\r" 
  click sendCommand,0
  printer.printState.txt="ready"
}
if(printer.state.txt="pausing")
{
  //See if new coordinates were recieved
  //Calculate new coords to goto
  //Goto them
  commands.queue.txt+="M25\r" //Pause print
  commands.queue.txt+="M400\r"
  commands.queue.txt+="G91\r" //Move out the way
  commands.queue.txt+="G0 X-5 Y-5 Z10\r"
  commands.queue.txt+="G90\r"
  commands.queue.txt+="M114\r"
  click sendCommand,0
  //Make sure all commands were sent
  printer.printState.txt="paused"
}
if(printer.printState.txt="resuming")
{
  //Go back to old coordinates
}
if(printer.printState.txt=="stopping")
{
  strlen commands.queue.txt,k //get the length of the command queue
  if(k==0)
  {
    click sendCommand,0
    printer.printState.txt="null"
    page main
  }
}


